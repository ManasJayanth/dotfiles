#!/bin/bash
# Display grep results via less.
grep $@ \
    -R \
    -H \
    -I \
    --line-number \
    --ignore-case \
    --exclude-dir .git \
    --exclude-dir .egg \
    --exclude-dir .egg-info \
    --exclude-dir .__pycache__ \
    --exclude *.pyc \
    --exclude *.DS_Store \
    --context 2 \
    --colour=always \
    .  | less -r
