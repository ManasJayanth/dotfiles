#!/usr/bin/env python3
import socketserver
from http.server import SimpleHTTPRequestHandler as h


# Default to html
h.extensions_map.update({"": "text/html"})
address = ("", 8000)


def main():
    with socketserver.TCPServer(address, h) as httpd:
        print("Serving on {}...".format(address))
        httpd.serve_forever()


if __name__ == "__main__":
    main()
